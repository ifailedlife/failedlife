---
import type { CollectionEntry } from 'astro:content'
interface Props {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props
---

<article class="prose" >
  <header class="not-prose">
    <h1 class="text-5 font-bold lh-7.5">
      <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
    </h1>
    <div class="my-2.5">
      <time class="text-3.5">{post.data.pubDate.toString().slice(0, 10)}</time>
    </div>
  </header>
  <slot />
</article>
