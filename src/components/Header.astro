---
import { SOCIALS, NAVS } from '~/config'

import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'footer'>

const { ...attrs } = Astro.props
---

<header un-lg="grow-1 justify-between items-start" un-flex="~ col gap-2.5" class="text-center" {...attrs}>
  <hgroup
    un-hover:lg="bg-primary color-secondary pt-3.75 pb-8.75 "
    un-lg=" write-vertical-right items-start px-2.5 b-l-2px b-l-primary-solid"
    un-flex="~ col gap-2.5"
    class="cursor-pointer transition-[padding,background] duration-800 ease-in-out"
  >
    <h3 class="text-5 font-extrabold font-serif">Moeyua</h3>
    <h1 class="text-8 font-extrabold font-serif">Typography</h1>
  </hgroup>

  <nav class="text-center font-bold" un-flex="~ col gap-2">
    <ul un-lg="flex-col items-start" class="text-3.5" un-flex="~ row gap-2 justify-center">
      {
        NAVS.map((nav) => (
          <li>
            <a href={nav.href}>{nav.name}</a>
          </li>
        ))
      }
    </ul>
    <ul un-flex="~ row gap-1 justify-center">
      {
        SOCIALS.map((soc) => (
          <li>
            <a href={soc.href} title={soc.linkTitle} class={`icon i-mdi-${soc.name}`} />
          </li>
        ))
      }
    </ul>
  </nav>
</header>
