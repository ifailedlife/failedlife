---
interface Props {
  post: Post
}

const { post } = Astro.props
const { locale } = Astro.locals.config
---

<article class="heti">
  <header>
    <h1 class="post-title!">
      <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
    </h1>
    <div class="mt-2">
      <time class="text-3.5">{post.data.pubDate.toLocaleDateString(locale)}</time>
    </div>
  </header>
  <slot />
</article>
